<section class="container">
  <form class="input-form" id="inputForm">
    <input type="text" id="inputUrl" name="url" placeholder="Enter any URL" />
    <button class="wp-element-button detector-button" type="submit"
      >Analize Website</button
    >
  </form>
</section>

<section id="outputContainer" class="container"></section>

<script>
window.addEventListener('DOMContentLoaded', () => {
    document.getElementById('inputForm').addEventListener('submit', async (event) => {
        // Prevent the form from being submitted to the server
        event.preventDefault();

        // Get the value from the input field
        let url = document.getElementById('inputUrl').value;

        // Make a request to the API
        let response = await fetch(`https://api.wp-detector.com/index.php?url=${encodeURIComponent(url)}`);
        let data = await response.json();

        // Display the result in the output container
        document.getElementById('outputContainer').textContent = data.wordpress === 'yes' ? 'This website uses WordPress' : 'This website does not use WordPress';
    });
});
</script>

<style>
  .container {
    text-align: center;
    margin: 0 3rem;
  }

  .input-form {
    display: inline-block;
    padding: 0.7rem 0.7rem 0.7rem 2rem;
    background: #fbfbfb;
    border: 1px solid #d9dce0;
    border-radius: 8px;
    box-shadow: rgba(149, 157, 165, 0.05) 0px 8px 24px;
    transition: 0.2s;
  }

  .input-form:hover {
    background: #ffffff;
