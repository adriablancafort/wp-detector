---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import InputHeadline from "../components/InputHeadline.astro";
import Input from "../components/Input.astro";
import Footer from "../components/Footer.astro";

const title = "WordPress Theme and Plugin Detector - Find out which WordPress theme and plugin any website uses";
const description = "Just enter any website URL and WordPress Detector will tell you which WordPress theme and WordPress plugins it is using and much more!";
---

<Layout title={title} description={description} >
  <Header />
  <InputHeadline />
  <Input />
  <Footer />
</Layout>
