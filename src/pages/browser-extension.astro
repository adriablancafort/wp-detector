---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ExtensionHeadline from "../components/ExtensionHeadline.astro";
import Footer from "../components/Footer.astro";

const title =
  "WordPress Detector Browser Extension - Detect WordPress Themes and Plugins";
const description =
  "Detect WordPress Themes and Plugins effortlessly as you browse!";

const seo = {
  title: title,
  description: description,
  openGraph: {
    title: title,
    description: description,
    url: "https://wp-detector.com/browser-extension",
  },
  twitter: {
    title: title,
    description: description,
  },
};
---

<Layout seo={seo}>
  <Header />
  <ExtensionHeadline />
  <Footer />
</Layout>
